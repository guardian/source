{
  "name": "source",
  "version": "3.10.1",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/@guardian/*",
    "scripts/get-usage",
    "scripts/validate-dist"
  ],
  "scripts": {
    "build": "npm-run-all build:src -p build:kitchen build:foundations build:react-components -s build:storybook",
    "build:eslint": "yarn workspace @guardian/eslint-config-source build",
    "build:foundations": "yarn workspace @guardian/source-foundations build",
    "build:kitchen": "yarn workspace @guardian/source-react-components-development-kitchen build",
    "build:react-components": "yarn workspace @guardian/source-react-components build",
    "build:src": "ts-node ./scripts/build-src",
    "build:storybook": "build-storybook -o dist",
    "build:storybook:ci": "NODE_ENV=production build-storybook -o dist",
    "clean": "npm-run-all clean:*",
    "clean:eslint": "yarn workspace @guardian/eslint-config-source clean",
    "clean:foundations": "yarn workspace @guardian/source-foundations clean",
    "clean:kitchen": "yarn workspace @guardian/source-react-components-development-kitchen clean",
    "clean:react-components": "yarn workspace @guardian/source-react-components clean",
    "clean:root": "rm -rf dist",
    "clean:src": "ts-node ./scripts/clean-src",
    "fix": "yarn lint:js --fix",
    "get-usage": "ts-node ./scripts/get-usage",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .ts,.tsx,.js",
    "lint:styles": "stylelint packages/**/styles.ts",
    "prepare": "husky install",
    "publish:release": "ts-node ./scripts/publish-release",
    "release": "yarn clean && yarn build:src -p build:kitchen build:foundations build:react-components && lerna publish --no-private",
    "release:major:src": "yarn build:src && yarn validate && yarn verbump:major:src && yarn publish:release",
    "release:minor:src": "yarn build:src && yarn validate && yarn verbump:minor:src && yarn publish:release",
    "release:patch:src": "yarn build:src && yarn validate && yarn verbump:patch:src && yarn publish:release",
    "release:prerelease-bump:src": "yarn validate && yarn verbump:prerelease:src && yarn publish:release",
    "release:prerelease:src": "yarn validate && yarn publish:release",
    "storybook": "start-storybook -p 6006",
    "tag:beta:src": "ts-node ./scripts/tag-beta-src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc": "tsc",
    "validate": "yarn tsc && yarn lint && yarn test",
    "validate-dist": "yarn build && yarn workspace validate-dist validate",
    "validate:ci": "yarn tsc && yarn lint && yarn test:coverage --ci",
    "verbump:deps:src": "ts-node ./scripts/verbump-src-deps-src",
    "verbump:major": "yarn version --major --no-git-tag-version",
    "verbump:major:src": "ts-node ./scripts/verbump-major-src && yarn verbump:deps:src",
    "verbump:minor": "yarn version --minor --no-git-tag-version",
    "verbump:minor:src": "ts-node ./scripts/verbump-minor-src && yarn verbump:deps:src",
    "verbump:patch": "yarn version --patch --no-git-tag-version",
    "verbump:patch:src": "ts-node ./scripts/verbump-patch-src && yarn verbump:deps:src",
    "verbump:premajor": "yarn version --premajor --preid rc --no-git-tag-version",
    "verbump:premajor:src": "ts-node ./scripts/verbump-premajor-src && yarn verbump:deps:src",
    "verbump:preminor": "yarn version --preminor --preid rc --no-git-tag-version",
    "verbump:preminor:src": "ts-node ./scripts/verbump-preminor-src && yarn verbump:deps:src",
    "verbump:prerelease": "yarn version --prerelease --preid rc --no-git-tag-version",
    "verbump:prerelease:src": "ts-node ./scripts/verbump-prerelease-src && yarn verbump:deps:src",
    "watch:foundations": "cd packages/@guardian/src-foundations && yarn watch",
    "watch:icons": "cd packages/@guardian/src-icons && yarn watch"
  },
  "lint-staged": {
    "package.json": "sort-package-json"
  },
  "prettier": "@guardian/prettier",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.14.5",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/react": "^11.1.2",
    "@guardian/prettier": "^0.7.0",
    "@storybook/addon-a11y": "^6.3.10",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/components": "^6.3.10",
    "@storybook/core-events": "^6.3.10",
    "@storybook/react": "^6.3.10",
    "@storybook/theming": "^6.3.10",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "execa": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.3",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "sort-package-json": "^1.48.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.0",
    "webpack": "^5.57.1"
  }
}
