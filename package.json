{
  "name": "source",
  "version": "3.9.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "src/core/*",
    "src/core/components/*",
    "packages/@guardian/*",
    "scripts/get-usage"
  ],
  "scripts": {
    "build-storybook": "build-storybook -o dist",
    "build:all": "ts-node ./scripts/build-all",
    "build:ci": "NODE_ENV=production build-storybook -o dist",
    "clean": "rm -rf dist",
    "clean:all": "ts-node ./scripts/clean-all",
    "fix": "yarn lint:js --fix",
    "foundations": "yarn workspace @guardian/source-foundations",
    "get-usage": "ts-node ./scripts/get-usage",
    "kitchen": "yarn workspace @guardian/source-react-components-development-kitchen",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .ts,.tsx,.js",
    "lint:styles": "stylelint src/core/**/styles.ts",
    "prepare": "husky install",
    "publish:release": "ts-node ./scripts/publish-release",
    "publish:release:kitchen": "ts-node ./scripts/publish-release-kitchen",
    "release:major:all": "yarn build:all && yarn validate && yarn verbump:major:all && yarn publish:release",
    "release:major:kitchen": "yarn kitchen build && yarn validate && yarn kitchen verbump:major && yarn publish:release:kitchen",
    "release:minor:all": "yarn build:all && yarn validate && yarn verbump:minor:all && yarn publish:release",
    "release:minor:kitchen": "yarn kitchen build && yarn validate && yarn kitchen verbump:minor && yarn publish:release:kitchen",
    "release:patch:all": "yarn build:all && yarn validate && yarn verbump:patch:all && yarn publish:release",
    "release:patch:kitchen": "yarn kitchen build && yarn validate && yarn kitchen verbump:patch && yarn publish:release:kitchen",
    "release:prerelease-bump:all": "yarn validate && yarn verbump:prerelease:all && yarn publish:release",
    "release:prerelease-bump:kitchen": "yarn validate && yarn kitchen verbump:prerelease && yarn publish:release:kitchen",
    "release:prerelease:all": "yarn validate && yarn publish:release",
    "release:prerelease:kitchen": "yarn validate && yarn publish:release:kitchen",
    "shakedown": "yarn workspace @guardian/source-shakedown",
    "shakedown:shakedown": "yarn build:all && yarn shakedown shakedown",
    "storybook": "start-storybook -p 6006",
    "tag:beta:all": "ts-node ./scripts/tag-beta-all",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc": "tsc",
    "validate": "yarn tsc && yarn lint && yarn test",
    "validate:ci": "yarn tsc && yarn lint && yarn test:coverage --ci",
    "verbump:deps:all": "ts-node ./scripts/verbump-src-deps-all",
    "verbump:major": "yarn version --major --no-git-tag-version",
    "verbump:major:all": "ts-node ./scripts/verbump-major-all && yarn verbump:deps:all",
    "verbump:minor": "yarn version --minor --no-git-tag-version",
    "verbump:minor:all": "ts-node ./scripts/verbump-minor-all && yarn verbump:deps:all",
    "verbump:patch": "yarn version --patch --no-git-tag-version",
    "verbump:patch:all": "ts-node ./scripts/verbump-patch-all && yarn verbump:deps:all",
    "verbump:premajor": "yarn version --premajor --preid rc --no-git-tag-version",
    "verbump:premajor:all": "ts-node ./scripts/verbump-premajor-all && yarn verbump:deps:all",
    "verbump:preminor": "yarn version --preminor --preid rc --no-git-tag-version",
    "verbump:preminor:all": "ts-node ./scripts/verbump-preminor-all && yarn verbump:deps:all",
    "verbump:prerelease": "yarn version --prerelease --preid rc --no-git-tag-version",
    "verbump:prerelease:all": "ts-node ./scripts/verbump-prerelease-all && yarn verbump:deps:all",
    "watch:foundations": "cd src/core/foundations && yarn watch",
    "watch:icons": "cd src/core/icons && yarn watch"
  },
  "lint-staged": {
    "package.json": "sort-package-json"
  },
  "prettier": "@guardian/prettier",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.14.5",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@emotion/react": "^11.1.2",
    "@guardian/prettier": "^0.6.0",
    "@storybook/addon-a11y": "^6.3.6",
    "@storybook/addon-actions": "^6.3.5",
    "@storybook/addon-essentials": "^6.3.5",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.5",
    "@storybook/theming": "^6.3.7",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "execa": "^5.0.0",
    "husky": "^7.0.1",
    "jest": "^27.2.3",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "sort-package-json": "^1.48.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.50.0"
  }
}
