{
  "name": "source",
  "version": "3.12.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/@guardian/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "npm-run-all build:packages build:eslint build:storybook",
    "build:eslint": "yarn workspace @guardian/eslint-plugin-source-foundations build && yarn workspace @guardian/eslint-plugin-source-react-components build",
    "build:foundations": "yarn workspace @guardian/source-foundations build",
    "build:kitchen": "yarn workspace @guardian/source-react-components-development-kitchen build",
    "build:packages": "npm-run-all -p build:kitchen build:foundations build:react-components build:eslint",
    "build:react-components": "yarn workspace @guardian/source-react-components build",
    "build:storybook": "build-storybook -o dist",
    "build:storybook:ci": "NODE_ENV=production build-storybook -o dist",
    "clean": "npm-run-all clean:*",
    "clean:eslint": "yarn workspace @guardian/eslint-plugin-source-foundations clean && yarn workspace @guardian/eslint-plugin-source-react-components clean",
    "clean:foundations": "yarn workspace @guardian/source-foundations clean",
    "clean:kitchen": "yarn workspace @guardian/source-react-components-development-kitchen clean",
    "clean:react-components": "yarn workspace @guardian/source-react-components clean",
    "clean:root": "rm -rf dist",
    "fix": "yarn lint:js --fix",
    "get-usage": "ts-node ./scripts/get-usage",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .ts,.tsx,.js",
    "lint:styles": "stylelint packages/**/styles.ts",
    "prepare": "husky install",
    "release": "yarn clean && yarn build:packages && changeset publish",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc": "tsc",
    "validate": "yarn tsc && yarn lint && yarn test",
    "validate-dist": "yarn build && yarn workspace validate-dist validate",
    "validate:ci": "yarn tsc && yarn lint && yarn test:coverage --ci",
    "verbump:prerelease": "yarn version --prerelease --preid rc --no-git-tag-version"
  },
  "lint-staged": {
    "package.json": "sort-package-json"
  },
  "prettier": "@guardian/prettier",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/cli": "^2.19.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/react": "11.0.0",
    "@guardian/eslint-config": "^1.0.0",
    "@guardian/eslint-config-typescript": "^1.0.0",
    "@guardian/libs": "3.3.0",
    "@guardian/prettier": "^0.7.0",
    "@storybook/addon-a11y": "^6.4.14",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/builder-webpack5": "^6.4.14",
    "@storybook/components": "^6.4.14",
    "@storybook/core-events": "^6.4.14",
    "@storybook/manager-webpack5": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@storybook/theming": "^6.4.14",
    "@types/jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "chromatic": "^6.0.4",
    "eslint": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "execa": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.3",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "regenerator-runtime": "^0.13.7",
    "sort-package-json": "^1.48.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.57.1"
  }
}
