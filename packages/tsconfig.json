{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    "jsx": "preserve",
    "module": "ES2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "target": "ES2020",
    "types": ["@emotion/react/types/css-prop", "@types/jest"],
    "paths": {
      "@guardian/src-foundations": ["source/foundations/src"],
      "@guardian/src-foundations/*": ["source/foundations/src/*"],
      "@guardian/src-foundations/types/themes": [
        "source/foundations/types/themes"
      ],
      "@guardian/src-helpers": ["source/helpers"],
      "@guardian/src-brand": ["source/brand"],
      "@guardian/src-components/*": ["source/components/*"],
      "@guardian/src-icons": ["source/icons"],
      "@guardian/src-label": ["source/components/label"],
      "@guardian/src-user-feedback": ["source/components/user-feedback"],
      "@guardian/src-link": ["source/components/link"]
    }
  }
}
