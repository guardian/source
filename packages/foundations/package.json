{
	"name": "@guardian/src-foundations",
	"version": "0.6.0-alpha.1",
	"main": "foundations.js",
	"module": "foundations.esm.js",
	"scripts": {
		"build": "yarn clean && tsc && rollup --config",
		"watch": "rollup --config --watch",
		"clean": "rm -rf accessibility mq __experimental__typography foundations.js foundations.esm.js *.d.ts src/**/*.d.ts",
		"prepublishOnly": "yarn build",
		"postpublish": "yarn clean"
	},
	"files": [
		"mq/*",
		"accessibility/*",
		"__experimental__typography/*",
		"*.d.ts",
		"foundations.esm.js",
		"src/animation.ts",
		"src/breakpoints.ts",
		"src/index.ts",
		"src/palette.ts",
		"src/size.ts",
		"src/space.ts",
		"src/theme.ts",
		"src/typography.ts",
		"src/accessibility/index.ts",
		"src/mq/index.ts",
		"src/typography/index.ts"
	],
	"devDependencies": {
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-typescript": "^7.3.3",
		"rollup": "^1.19.4",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-node-resolve": "^5.2.0",
		"typescript": "^3.6.4"
	}
}
