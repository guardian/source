{
  "compilerOptions": {
    "baseUrl": "packages",
    "paths": {
      "@guardian/src-foundations": ["source/foundations/src"],
      "@guardian/src-foundations/mq": ["source/foundations/src/mq"],
      "@guardian/src-foundations/accessibility": [
        "source/foundations/src/accessibility"
      ],
      "@guardian/src-foundations/palette": ["source/foundations/src/palette"],
      "@guardian/src-foundations/size": ["source/foundations/src/size"],
      "@guardian/src-foundations/themes": ["source/foundations/src/themes"],
      "@guardian/src-foundations/typography": [
        "source/foundations/src/typography"
      ],
      "@guardian/src-foundations/utils": ["source/foundations/src/utils"],
      "@guardian/src-label": ["source/components/label"],
      "@guardian/src-user-feedback": ["source/components/user-feedback"],
      "@guardian/src-helpers": ["source/helpers"],
      "@guardian/src-icons": ["source/icons"]
    },
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
