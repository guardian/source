{
	"extends": "@guardian/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"noEmit": true,
		"paths": {
			"@guardian/source-foundations": [
				"packages/@guardian/source-foundations/src/index"
			],
			"@guardian/source-react-components": [
				"packages/@guardian/source-react-components/src/index"
			],
			"@guardian/source-react-components-development-kitchen": [
				"packages/@guardian/source-react-components-development-kitchen/src/index"
			]
		},
		"sourceMap": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["packages", "lib", "scripts"],
	"exclude": ["node_modules", "dist"]
}
